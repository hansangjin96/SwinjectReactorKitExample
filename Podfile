# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

inhibit_all_warnings!

target 'SwinjectReactorKitExample' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # DI
  pod 'Swinject'
  pod 'SwinjectSafeAuto'
  pod 'PureSwinject'
  
  # Architecture
  pod 'ReactorKit'
  
  # Reactive
  pod 'RxSwift'
  pod 'RxCocoa'
  
  # Util
  pod 'SnapKit'
  pod 'Then'
  
  # Resource
  pod 'R.swift'
  
  # UI
  pod 'lottie-ios'
  
  # Network
  pod 'Moya/RxSwift'

  # Pods for SwinjectReactorKitExample

  target 'SwinjectReactorKitExampleTests' do
    inherit! :search_paths
    
    # For Normal Test
    
    pod 'Quick'
    pod 'Nimble'
    
    # For Reactive Test
    
    pod 'RxTest'
    pod 'RxNimble'

  end

  target 'SwinjectReactorKitExampleUITests' do
    # Pods for testing
  end

end
